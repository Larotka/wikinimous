

<div class="col-6 mx-auto">
  <% @articles.each do |article| %>
    <div class="col-12 border rounded p-2 mb-4" style="border-color: rgba(222,222,226,1);">
      <div>
        <%= link_to article_path(article), class: "no-purp-btn" do %>
          <h4><%= article.title %></h4>
        <% end %>
        <p class="mb-1"><%= article.content %></p>
      </div>
      <div class="d-flex justify-content-end align-itels-center p-2">
        <%= simple_form_for article, url: article_delete_path(article), method: :delete, class: "d-flex justify-content-center" do |f| %>
          <%= f.input :article_id, as: :hidden, input_html: { value: article.id } %>
          <%= f.submit "delete", class: "btn btn-delete" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
